<%- contentFor('hero') %>

	<% if (isCategory) { %>
		<div class="hero themed" data-theme="<%- thiscategory.slug %>">
			<div class="inner">
				<div class="content">
					<div class="central-column">
						<%- thiscategory.description %>
					</div>
				</div>
			</div>
		</div>
		<% } else if (isSearch) { %>
			<div class="hero themed">
				<div class="inner">
					<div class="content">
						<div class="central-column">
							<h1>&ldquo;<%- isSearch %>&rdquo;</h1>
						</div>
					</div>
				</div>
			</div>
        <% } else { %>
            <div class="hero themed" data-theme="">
    			<div class="inner">
    				<div class="content">
    					<div class="central-column">
    						<h1>Blog posts</h1>
    					</div>
    				</div>
    			</div>
    		</div>
		<% } %>


			<%- contentFor('body') %>

					<div class="central-column">
						<% for (post of posts) { %>
							<article class="card">
								<% if (post['_embedded']['wp:featuredmedia']) { %>
									<img class="hero_image" src="<%- post['_embedded']['wp:featuredmedia'][0].source_url %>" alt="<%- post.title.rendered %>">
								<% } else { %>
									<div class="hero_image themed"></div>
								<% } %>
									<div class="inner">
										<h2><%- post.title.rendered %></h2>
										<%- post.excerpt.rendered %>
										<a href="/insights/<%- post.slug %>" class="button">Read more</a>
									</div>
							</article>
						<% } %>
					</div>
