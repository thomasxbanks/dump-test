<%- contentFor('hero') %>
	<div class="hero" style="background-image: url(<%- post.acf.hero_bg_image %>)">
		<div class="inner">
			<div class="content">
				<h1 class="central-column">it all starts here</h1>
			</div>
		</div>
	</div>

	<%- contentFor('body') %>


		<article class="page central-column">
			<div class="inner">
				<%- post.content.rendered %>
			</div>
		</article>
		<div class="central-column">
			<% for (form of forms) { %>
				<% if (form.fields.length > 0) { %>

				<form style="width: <%= (100 / forms.length).toFixed(2) + '%' %>;" id="<%- form.container %>" action="/contact" method="POST" class="themed" data-theme="<%- form.theme %>">
					<div class="row">
						<p><%- form.title %></p>
						<h2><%- form.body %></h2>
					</div>
					<div class="row">
	                    <button class="button form-toggle" data-state="closed" id="<%- form.container %>">
	                        <%- form.buttontext %>
	                    </button>
	                </div>
					<fieldset class="form-field-wrapper" data-state="closed" data-theme="<%- form.container %>">
						<% for (field of form.fields) { %>
							<div class="row">
								<label><%- field.label %></label>
							<% if (field.type === 'textarea') { %>
								<textarea name="" id="" placeholder="<%- field.placeholder %>" cols="30" rows="10"></textarea>
							<% } else if (field.type === 'select') { %>
								<select name="" id="">
                                <% for (choice of field.choices) { %>
									<option <% if (choice.isSelected) { %> selected="true" <% } %> value="<%- choice.value %>">
										<%- choice.text %>
									</option>
								<% } %>
								</select>
							<% } else { %>
								<input type="<%- field.type %>" placeholder="<%- field.placeholder %>" />
							<% } %>
							</div>
						<% } %>
						<% if (form.button) { %>
							<div class="row">
								<button class="button" type="submit"><%- form.button %></button>
							</div>
						<% } %>

					</fieldset>
				</form>
				<% } %>
			<% } %>
		</div>
		<section>
			<div class="central-column">
				<h2>
					Our offices
				</h2>
				<p style="font-size: 1rem;">Google maps, contact details, and directions.</p>
			</div>
		</section>
